# include the distribution information file
. ./conf/distrorc

# the distribution version
VERSION="12.2"

case $DISTRO_ARCH in
	amd64|x86_64)
		arch="x86_64"
		;;
	x86|i?86)
		arch="i586"
		;;
esac

# repositories - package list URL|repository name; repositories are specified
# via their base path; this directory contains repodata/repomd.xml, with
# contains the variable name of the actual package list; see
# download_package_list
REPOSITORIES="http://mirror.csclub.uwaterloo.ca/opensuse/update/$VERSION|opensuse-update
              http://mirror.csclub.uwaterloo.ca/opensuse/distribution/$VERSION/repo/oss/suse|opensuse-oss"

# package download mirrors - more at http://mirrors.opensuse.org/
MIRRORS="http://mirror.csclub.uwaterloo.ca/opensuse/update/12.2|opensuse-update
         http://mirror.csclub.uwaterloo.ca/opensuse/distribution/12.2/repo/oss/suse|opensuse-oss"
